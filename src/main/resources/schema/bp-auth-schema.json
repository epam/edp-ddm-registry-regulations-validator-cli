{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "authorization": {
      "type": "object",
      "properties": {
        "realm": {
          "type": "string",
          "enum": ["officer", "citizen", "external-system"]
        },
        "process_definitions": {
          "type": "array",
          "minItems": 0,
          "items": [
            {
              "type": "object",
              "properties": {
                "process_definition_id": {
                  "type": "string"
                },
                "process_name": {
                  "type": "string"
                },
                "process_description": {
                  "type": "string"
                },
                "roles": {
                  "type": "array",
                  "minItems": 1,
                  "uniqueItems": true,
                  "items": [
                    {
                      "type": "string"
                    }
                  ]
                }
              },
              "required": [
                "process_definition_id",
                "process_name",
                "roles"
              ]
            }
          ]
        }
      },
      "required": [
        "process_definitions"
      ]
    }
  },
  "required": [
    "authorization"
  ]
}